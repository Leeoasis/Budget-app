<h2 class="login-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "login-form" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "label-field" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label-field" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "remember-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "login-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
